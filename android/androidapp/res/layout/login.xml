<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#556b2f">

	<TextView
	    android:id="@+id/login_title"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:text="Sign In to your PicGuess account"/>
	    
	<TextView
	    android:id="@+id/login_message"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center_horizontal"
	    android:background="#cd853f"
	    android:text=""/>
	    
	<TextView
	    android:id="@+id/login_label_username"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="Username"/>
	    
	<EditText
	    android:id="@+id/login_username"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"/>
	    
	<TextView
	    android:id="@+id/login_label_password"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="Password"/>
	    
	<EditText
	    android:id="@+id/login_password"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:inputType="textPassword"/>
	    
	<TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">
	    <TableRow>
            <Button
            android:id="@+id/login_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign In"/>    
            <Button
                android:id="@+id/login_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"/> 
        </TableRow>
    </TableLayout>
    
    <Button
        android:id="@+id/login_signup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="New to PicGuess? Create an account now."/>
           
</LinearLayout>